<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>notes-card</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
      <form action="/create" method="post">
        <input class="title block bg-zinc-700 px-5 py-2 w-full rounded-md outline-none" type="text"
          placeholder="Title " name="title">
        <textarea class="text-area block bg-zinc-700 px-5 py-2 mt-2 resize-none w-full rounded-md outline-none"
          placeholder="write details about.." name="text"></textarea>
        <input class="btn mt-2 bg-blue-500 px-5 py-3 rounded-md cursor-pointer" type="submit">
      </form>
    </div> 

    <div class="cards-container p-10 flex gap-4 flex-wrap">
      <% if(files.length > 0){ %>
      <% files.forEach((val)=>{ %>
      <div class="task w-72 px-3 py-2 bg-zinc-700 rounded-md">
        <h1 class="text-white text-3xl tracking-tighter"> <%= val%> </h1>
        <div class="flex mt-3 justify-between">
          <a href="/files/<%= val %>" class="text-blue-500  inline-block"> read more </a>
          <a href="/edit/<%= val %>" class="text-zinc-400 inline-block"> edit filename </a>
        </div>

      </div>
      <% }) %>

      <% }else{ %>
      <h3 class="text-zinc-600">No tasks yet.</h3>
      <% } %>

    </div>

    <% if(editStatus === "success"){ %>
      <script>
        alert("File name updated successfully.");
      </script>
    <% } %>

    <% if(editStatus === "failed"){ %>
      <script>
        alert("there is some isssue while updation");
      </script>
    <% } %>
  </div>
</body>

</html>